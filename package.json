{
  "packageManager": "npm@10.0.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",

    "dev:website": "turbo run dev --filter=website",
    "build:website": "turbo run build --filter=website",
    "test:website": "turbo run test --filter=website",

    "storybook:bionic": "turbo run storybook --filter=react-bionic-reading",
    "build:bionic": "turbo run build --filter=react-bionic-reading",
    "test:bionic": "turbo run test --filter=react-bionic-reading",
    "publish:bionic": "npm publish --workspace=react-bionic-reading --access public"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "turbo": "^2.5.5"
  }
}
